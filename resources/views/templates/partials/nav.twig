<div class="navbar navbar-inverse navbar-static-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="javascript:void(0)">Auth</a>
    </div>
    <div class="navbar-collapse collapse navbar-inverse-collapse">
      <ul class="nav navbar-nav">
        <li><a href="{{ path_for('home') }}">Home</a></li>
        {% if auth.check %}
          <li><a href="{{ path_for('auth.account') }}">My Account</a></li>
        {% endif %}
      </ul>
      <ul class="nav navbar-nav navbar-right">
          {% if auth.check %}
          <p class="navbar-text">
              Signed in as {{ auth.user.username }}
          </p>
          <li><a href="{{ path_for('auth.logout') }}">Logout</a></li>
          {% else %}
          <li><a href="{{ path_for('auth.login') }}">Login</a></li>
          <li><a href="{{ path_for('auth.register') }}">Register</a></li>
          {% endif %}
      </ul>
    </div>
  </div>
</div>
